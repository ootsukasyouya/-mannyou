<div class="container-fruid">
  <table class="table table-striped">
    <p id="notice"><%= notice %></p>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>日付</th>
      <th>進行状態</th>
      <th>優先度</th>
      <th colspan="3"></th>
    </tr>


    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.deadline %></td>
          <td><%= task.status_i18n %></td>
          <td><%= task.priority_i18n %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="bg-info clearfix">
  <button type="button" class="btn btn-secondary float-left"><%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %></button>
  <button type="button" class="btn btn-secondary float-right"><%= link_to "優先順位でソートする", tasks_path(sort_2: "true") %></button>
</div>

 <nav class=""navbar navbar-light bg-light"">
    <div class="search_form">
  <%= form_with url:tasks_path,method: :get, local: true do |search| %>
      <%=search.label :title %>
      <%= search.text_field :title %>
      <%=search.label :status %>
      <%=search.select :status,["","未着手","着手中","完了"] %>
      <%=search.select :priority,["","高","中","低"] %>
      <%= search.submit "検索" %>
  <% end %>
  </div>

<%= link_to '新しいタスクの作成', new_task_path %>
</nav>
<%= paginate @tasks, theme: 'twitter-bootstrap-4' %>
